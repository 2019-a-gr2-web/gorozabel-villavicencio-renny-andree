                <br>
                <label for="numeroPersonasId"># Personas</label>
                <input id="numeroPersonasId" name="numeroPersonas" type="number" step="1">
                <br>
                <label for="picanteId">Picantes</label>
                <input id="picanteId" name="picante" type="checkbox">
                <br>
                <a href="/examen/listaComidas">
                    <button type="button">Cancelar</button>
                </a>
                <button>Enviar Informacion</button>
            </form>
        </form>

