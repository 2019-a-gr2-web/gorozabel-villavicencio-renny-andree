    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <style>
        .bgHK{
            background-image: url("/Imagenes/HK-logo-new.jpg");
            background-size:cover;
        }
    </style>
</head>
<body class="bgHK">
<!-- header 1-6-->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">


    <a class="navbar-brand" href="../../bienvenido">Examen Web GR2</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav m-auto">
            <li class="nav-item active" style="padding-right: 60px;">
                <a>
                        <span>
                           <%= nombre%>
                        </span>
                </a>
            </li>
        </ul>

        <ul class="navbar-nav ml-auto" id="navbarSupportedContent">
            <li id="btn-salir" class="nav-item active">
                <form action="/examen/borrarCookie" method="POST">
                    <button type="submit" class="btn btn-primary"style="background-color: lightblue">Salir</button>
                </form>

            </li>
        </ul>
    </div>
</nav>

<div class="container">
    <div class="mt-5 d-flex justify-content-center">
        <form action="/examen/comida/crearIngrediente" method="post">
            <h1>Formulario de Creación de Ingredientes</h1>
            <p>Crea un nuevo Ingrediente.</p>

            <form action="/examen/comida/crearIngrediente"
                  method="post">
                <label for="nombreId">Nombre Ingrediente</label>
                <input id="nombreId" name="nombreIngrediente" type="text">
                <br>
                <label for="descripcionPreparacionID">Preparacion</label>
                <input id="descripcionPreparacionID" name="descripcionPreparacion" type="text">
                <br>
                <label for="cantidadId">Cantidad</label>
                <input id="cantidadId" name="cantidad" type="number" min="0" step="1">
                <br>
                <label for="opcionalId">Opcional</label>
                <input id="opcionalId" name="opcional" type="checkbox">
                <br>
                <label for="tipoID">Tipo</label>
                <select id="tipoID" name="tipoIngrediente">
                    <option value="Vegetal">Vegetal</option>
                    <option value="Fruta">Fruta</option>
                    <option value="Carne" selected>Carne</option>
                </select>
                <br>
                <label for="refrigeracionID">¿Necesita Refrigeración?</label>
                <input id="refrigeracionID" name="necesitaRefrigeracion" type="checkbox">
                <br>
                <label for="comidaID">ID Comida</label>
                <input id="comidaID" name="comidaId" type="number" min="0" value="<%=id%>" readonly>
                <br>
                <br>
                <!--<button type="reset">Reset</button>-->
                <!--<button type="submit">Submit</button>-->
                <a href="/examen/comida/listaIngredientes">
                    <button type="button">Cancelar</button>
                </a>
                <button>Enviar Informacion</button>
            </form>
        </form>

        <br>
    </div>
</div>
</body>
</html>
