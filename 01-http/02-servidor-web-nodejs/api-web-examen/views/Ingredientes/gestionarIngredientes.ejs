<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form action="/examen/comida/buscarIngrediente/" method="POST">

                <div class="mt-5 d-flex justify-content-center">
                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group">
                                <label for="busquedaIngredientes">BÃºsqueda</label>
                                <input class="form-control" id="busquedaIngredientes" name="busquedaIngredientes" type="text">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex justify-content-center">

                                <button type="submit" class=" mt-4 btn btn-primary" >Buscar</button>

                            </div>
                            <div class="mt-3 d-flex justify-content-center">
                                <a href="/examen/comida/crearIngrediente/<%=id%>">
                                    <button type="button" class="btn btn-primary" >Crear</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
    <div class="row mt-5">
        <div class="col-md-12">
            <table class="ml-5">
                <tr>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Cantidad</th>
                    <th>Opcional</th>
                    <th>Tipo</th>
                    <th>Refrigeracion</th>
                    <th>ComidaID</th>
                    <th>Opciones</th>
                </tr>
                <% arregloIngredientes.forEach((ingredientes)=>{ %>
                    <tr>
                        <td> <%= ingredientes.nombreIngrediente %> </td>
                        <td> <%= ingredientes.descripcionPreparacion %> </td>
                        <td> <%= ingredientes.cantidad %> </td>
                        <td> <%= ingredientes.opcional %> </td>
                        <td> <%= ingredientes.tipoIngrediente %> </td>
                        <td> <%= ingredientes.necesitaRefrigeracion %> </td>
                        <td> <%= ingredientes.comidaId %> </td>
                        <td>
                            <form action="/examen/comida/eliminarIngredientes" method="post">
                                <input id="idIngrediente" name="idIngrediente" type="number" value="<%= ingredientes.id %>"hidden>
                                <input id="comidaIdIngre" name="comidaIdIngre" type="number" value="<%= ingredientes.comidaId %>" hidden >
                                <button>Borrar</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </table>
        </div>
    </div>
</div>


