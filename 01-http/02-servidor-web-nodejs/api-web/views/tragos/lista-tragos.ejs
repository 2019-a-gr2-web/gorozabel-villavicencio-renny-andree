<% const nombreUsuario='Renny'%>
<%- include('../componentes/menu/menu',{nombre:nombreUsuario})%>
<style>
    table,tr,td,th{
        border:1px black solid;
    }
</style>

<a href="crear">
    <button type="button" class="btn btn-default">Crear</button>
</a>


<table>
    <tr>
        <th>Nombre</th>
        <th>Tipo</th>
        <th>Grados</th>
        <th>Precio</th>
        <th>Fecha de Caducidad</th>
        <th>Acciones</th>
    </tr>
    <% arregloTragos.forEach((trago) =>{ %>
    <tr>
        <td>
            <%=trago.nombre%>
        </td>
        <td>
            <%=trago.tipo%>
        </td>
        <td>
            <%=trago.gradosAlcohol%>
        </td>
        <td>
            <%=trago.precio%>
        </td>
        <td>
            <%=trago.fechaCaducidad%>
        </td>
        <td>
            <a href="/api/traguito/editar/<%= trago.id %>">
                <input id="id" name="id" type="number" value="<%= trago.id %>"  hidden >
                <button>Editar</button>
            </a>
            <form action="/api/traguito/eliminar" method="post">
                <input id="id" name="indice" type="number" value="<%= trago.id %>"  hidden >
                <button>Eliminar</button>
            </form>

        </td>
    </tr>
    <% }); %>
</table>

<%- include('../componentes/footer/footer')%>
